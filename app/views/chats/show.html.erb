<h2><%= @user.name %>さんとのチャット</h2>
<table class="table table-borderless message">
  <% @chats.each do |chat| %>
    <% if chat.user == current_user %>
      <tbody>
        <tr>
          <td>
            <p style="text-align: left;"><%= chat.message %></p>
          </td>
        </tr>
      </tbody>
    <% else %>
      <tbody>
        <tr>
          <td>
            <p style="text-align: right;"><%= chat.message %></p>
          </td>
        </tr>
      </tbody>
    <% end %>
  <% end %>
</table>
<%= form_with model: @chat do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id, value: @chat.room_id %>
<% end %>