<div class="container mt-3">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info", user: current_user %>
      <%= render "books/form", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Group detail</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= attachment_image_tag @group, :image, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |user| %>
                <%= user.name %>
              <% end %>
            </td>
            <td>
              <% if @group.users.include?(current_user) %>
                <%= link_to "Leave this group", group_path(@group), method: :delete, class:"btn btn-danger btn-sm" %>
              <% else %>
                <%= link_to "Join this group", join_group_path(@group), class:"btn btn-success btn-sm" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>